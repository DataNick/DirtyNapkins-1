    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div> 
